<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head', { title: title || 'Error - DaySave.app' }) %>
  <style>
    body {
      background-color: #f5f7fa;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .main-content {
      padding: 3rem 2rem;
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .error-container {
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.05);
      padding: 3rem;
      text-align: center;
      max-width: 600px;
      width: 100%;
    }
    
    .error-code {
      font-size: 5rem;
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 1rem;
    }
    
    .error-message {
      font-size: 1.25rem;
      color: #4b5563;
      margin-bottom: 2rem;
    }
    
    .error-details {
      background-color: #f5f7fa;
      border-radius: 8px;
      padding: 1rem;
      margin-bottom: 2rem;
      text-align: left;
      overflow-x: auto;
    }
    
    .error-details pre {
      margin: 0;
      font-size: 0.85rem;
      color: #4b5563;
    }
    
    .error-action {
      margin-top: 2rem;
    }
    
    .btn {
      padding: 0.75rem 2rem;
      font-weight: 500;
    }
  </style>
</head>
<body>
  <!-- Top Navigation -->
  <%- include('partials/navbar', { active: '', user: locals.user || null }) %>

  <!-- Main Content -->
  <div class="main-content">
    <div class="error-container">
      <div class="error-code">
        <%= status || 500 %>
      </div>
      <div class="error-message">
        <%= message || 'An error occurred' %>
      </div>
      <% if (process.env.NODE_ENV === 'development' && error) { %>
        <div class="error-details">
          <pre><%= error.stack %></pre>
        </div>
      <% } %>
      <div class="error-action">
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>